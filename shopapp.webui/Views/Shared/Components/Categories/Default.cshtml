@model List<Category>

<div class="list-group">
   
     <a href="/products" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"].ToString() == "list" && ViewContext.RouteData.Values["category"]== null ? "active" : "") ">Tüm Kategoriler</a> 
    @* <a href="/products"  class="list-group-item list-group-item-action">Tüm Kategoriler</a>  *@
    
    @foreach (var item in Model)
    {
        <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url.ToString()?"active":"")">@item.Name</a>
    }
</div>
